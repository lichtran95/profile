extends layout.pug

//- Setting
block setting
	- var layout = true
	- var header = true
	- var footer = true
	- var navigate = true
	- var moment = true
	- var daterangepicker = true

block head
	include head.pug

block pages
	- bodyC.push("")
	- layoutClasses.push("admin-layout")
	- headerClasses.push("")
	- bodyClasses.push("main-content")
	- navigateClasses.push("sidebar-navigation")
	- footerClasses.push("")
	
//- Add Header
block header
	include page/header.pug

//- Add Body
block body
	include page/_event_create.pug

//- Add Nav
block navigate
	include page/_navigate.pug

//- Add Footer
block footer
	include page/footer.pug

//- Add Modal
block modal
	include page/modal_confirm.pug

block javaScripts extend
	script.
		$(function() {
			$('input[name="daterange"]').daterangepicker({
				showDropdowns: true,
				minYear: 1901,
				maxYear: parseInt(moment().format('YYYY'),10)
			});
		});
