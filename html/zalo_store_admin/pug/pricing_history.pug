extends layout_lite.pug

//- Setting
block setting
	- var layout = true
	- var header = true
	- var footer = true
	- var navigate = true
	- var modal = true
	- var daterangepicker = true

block head
	include head.pug

block pages
	- bodyC.push("")
	- layoutClasses.push("admin-layout")
	- headerClasses.push("")
	- bodyClasses.push("main-content main-content-lite")
	- navigateClasses.push("sidebar-navigation")
	- footerClasses.push("")
	
//- Add Header
block header
	include page/header_lite.pug

//- Add Body
block body
	include page/_pricing_history.pug

//- Add Nav
block navigate
	include page/_navigate_lite.pug

//- Add Footer
block footer
	include page/footer.pug


block javaScripts extend
	script.
		$(function() {
			$('input[name="daterange"]').daterangepicker({
				showDropdowns: true,
				minYear: 1901,
				maxYear: parseInt(moment().format('YYYY'),10)
			});
			$('input[name="daterange"]').val('Ngày đặt hàng');
		});