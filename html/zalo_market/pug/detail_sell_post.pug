extends layout.pug

//- Setting
block setting
	- var layout = true
	- var dockbar = true
	- var modal = true
	- var swiperjs = true
	- var fancyboxjs = true

block head
	include head.pug

block pages
	- bodyC.push("")
	- layoutClasses.push("zMarket-layout")
	- bodyClasses.push("page-content")
	- dockbarClasses.push("dockbar")
	
//- Add Body
block body
	include page/_detail_sell_post.pug

//- Add Footer
block dockbar
	include page/dockbar_push_post.pug

//- Add Modal
block modal
	include page/modal_edit_action.pug
	include page/modal_edit_action1.pug
	include page/modal_edit_action2.pug

block javaScripts extend
	script.
		var swiper = new Swiper('.swiper-img', {
			slidesPerView: 1,
			spaceBetween: 0,
			pagination: {
				el: '#img-pagination',
			},
		});
		$(".func-open-toast").click(function(){
			$(".module-toast").addClass("is-show");
			setTimeout(function () {
				$(".module-toast").removeClass("is-show")
			}, 1500);
		})
		$(".func-share").click(function(){
			event.stopPropagation();
			$(".feature-share-list").toggleClass("is-active");
		});
		$(".page-content").click(function(){
			$(".feature-share-list").removeClass("is-active");
		});
		
		//- check trường hợp 1 nút func-detail-list
		var checkLengthButton = function(){
			var groupButton = document.querySelector(".func-detail-list");
			var button = document.querySelectorAll(".func-detail-list li");
			if(button.length === 1){
				groupButton.classList.add("is-single")
			}
		};
		checkLengthButton();