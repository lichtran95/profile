block home

.bl-module.bl-module-v2.module-pricing.module-old-pricing
	.banner-card
		.price-content
			.block.left
				p Phí đăng tin cơ bản
				h1.price-title 100.000đ
			.block.right
				p.info 1 Tin/30 ngày

	.addition-block
		h3.title Nâng cấp gói đẩy tin
		.block-price-item
			.item-container
				.text-block
					p.title Highlight Premium
					p.text-line Chữ in hoa toàn bộ và làm đậm, có màu khác biệt.
					p.text-line Vị trí được ưu tiên cao nhất trong listing
				img(style="width: 120px;" src="./images/DAIMOND-GIF.gif")
			.detail-expand#premium
				.controls.choosing-price
					.control
						input(id="premium1" type="radio" name="premium_price" checked)
						label(for="premium1") 
							span.price 15,000đ<br/>
							span.time 1 ngày
					.control
						input(id="premium2" type="radio" name="premium_price")
						label(for="premium2") 
							span.price 100,000đ<br/>
							span.time 7 ngày
					.control
						input(id="premium3" type="radio" name="premium_price")
						label(for="premium3") 
							span.price 420,000đ<br/>
							span.time 30 ngày
				.text-block
					p.title Upsize, gắn nhãn cho tin Highlight
					p Làm to vùng post
					p Có button call ngay đến Zalo
					p Gắn label
						span.is-blue Nổi bật
						span.is-yellow Xem nhiều
						span.is-red Hot
				.controls.upsize-price
					.control
						input(id="upsize4" type="radio" name="upsize_price_pre" checked)
						label(for="upsize4") 
							span.price 15,000đ
							span.time 1 ngày
					.control
						input(id="upsize5" type="radio" name="upsize_price_pre")
						label(for="upsize5") 
							span.price 100,000đ
							span.time 7 ngày
					.control
						input(id="upsize6" type="radio" name="upsize_price_pre")
						label(for="upsize6") 
							span.price 15,000đ
							span.time 30 ngày
			a.btn.btn-primary.btn--s.w-100.is-light#open-premium Chọn thêm gói Premium
		.block-price-item
			.item-container
				.text-block
					p.title Highlight Medium
					p.text-line Chữ được làm đậm, có màu khác biệt (nhưng kém nổi bật hơn premium).
					p.text-line Vị trí nằm dưới premium post nhưng phía trên normal post
				img(style="width: 120px;" src="./images/gold-gif.gif")
			.detail-expand#medium
				.controls.choosing-price
					.control
						input(id="medium1" type="radio" name="medium_price_med")
						label(for="medium1") 
							span.price 8,000đ<br/>
							span.time 1 ngày
					.control
						input(id="medium2" type="radio" name="medium_price_med")
						label(for="medium2") 
							span.price 55,000đ<br/>
							span.time 7 ngày
					.control
						input(id="medium3" type="radio" name="medium_price_med")
						label(for="medium3") 
							span.price 230,000đ<br/>
							span.time 30 ngày
				.text-block
					p.title Upsize, gắn nhãn cho tin Highlight
					p Làm to vùng post
					p Có button call ngay đến Zalo
					p Gắn label
						span.is-blue Nổi bật
						span.is-yellow Xem nhiều
						span.is-red Hot
				.controls.upsize-price
					.control
						input(id="upsize1" type="radio" name="upsize_price")
						label(for="upsize1") 
							span.price 15,000đ
							span.time 1 ngày
					.control
						input(id="upsize2" type="radio" name="upsize_price" disabled)
						label(for="upsize2") 
							span.price 100,000đ
							span.time 7 ngày
					.control
						input(id="upsize3" type="radio" name="upsize_price")
						label(for="upsize3") 
							span.price 15,000đ
							span.time 30 ngày
			a.btn.btn-primary.btn--s.w-100.is-light#open-medium Chọn thêm gói Medium
	.block-fixed
		a.btn.btn-primary.btn--m.w-100 Thanh toán 100,000đ
	.fixed-temp-forbtn