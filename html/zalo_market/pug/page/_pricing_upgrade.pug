block home
.lick-blk-message 
	i.icn.icn-bold-bulb
	.text 
		p Bạn đang có <strong>[xxx] điểm thưởng</strong>
		p Giảm [xxx]đ khi thanh toán
.bl-module.bl-module-v2.module-upgrade-pricing.module-pricing
	.banner-card
		.default-block 
			h3.title Gói Basic
			p Tin đăng còn hiệu lực đến ngày 
				span dd/mm/yyyy
		.price-content
			.block.left.new-block
				h1 Tên gói
				p.infor Thời gian hiệu lực
		.price-content.has-popup
			.block.left.new-block
				h1 Tên gói
				p.infor Thời gian hiệu lực
		.block-bottom 
			h3 Kèm tính năng TIN NỔI BẬT
			p Từ 01/01/2021 đến 01/01/2022
	.package-extend 
		h3.title Gia hạn gói tin
		input#extendPackage(type='checkbox')
		label(for='extendPackage')
			.left
				i.icn.icn-check-circle
				p 100,000đ
			.right 
				p 30 ngày
	.addition-block
		h3.title Nâng cấp gói đẩy tin
		.block-price-item
			.item-container
				.text-block
					p.title Highlight Premium
					p.text-line Chữ in hoa toàn bộ và làm đậm, có màu khác biệt.
					p.text-line Vị trí được ưu tiên cao nhất trong listing
				img(style="width: 120px;" src="./images/DAIMOND-GIF.gif")
			.detail-expand#premium
				.controls.choosing-price
					.control
						input(id="premium1" type="radio" name="premium_price" checked)
						label(for="premium1") 
							span.price 15,000đ<br/>
							span.time 1 ngày
					.control
						input(id="premium2" type="radio" name="premium_price")
						label(for="premium2") 
							span.price 100,000đ<br/>
							span.time 7 ngày
					.control
						input(id="premium3" type="radio" name="premium_price")
						label(for="premium3") 
							span.price 420,000đ<br/>
							span.time 30 ngày
				.text-block
					p.title Upsize, gắn nhãn cho tin Highlight
					p Làm to vùng post
					p Có button call ngay đến Zalo
					p Gắn label
						span.is-blue Nổi bật
						span.is-yellow Xem nhiều
						span.is-red Hot
				.controls.upsize-price
					.control
						input(id="upsize4" type="radio" name="upsize_price_pre" checked)
						label(for="upsize4") 
							span.price 15,000đ
							span.time 1 ngày
					.control
						input(id="upsize5" type="radio" name="upsize_price_pre")
						label(for="upsize5") 
							span.price 100,000đ
							span.time 7 ngày
					.control
						input(id="upsize6" type="radio" name="upsize_price_pre")
						label(for="upsize6") 
							span.price 15,000đ
							span.time 30 ngày
			a.btn.btn-primary.btn--s.w-100.is-light#open-premium Chọn thêm gói Premium
		.block-price-item
			.item-container
				.text-block
					p.title Highlight Medium
					p.text-line Chữ được làm đậm, có màu khác biệt (nhưng kém nổi bật hơn premium).
					p.text-line Vị trí nằm dưới premium post nhưng phía trên normal post
