							li
								.input-group
									input(id="optiona-price-all" name="price" type="radio")
									label(for="optiona-price-all") Tất cả
								.input-group
									input(id="price_1" name="price" type="radio")
									label(for="price_1") Dưới 50 triệu
								.input-group
									input(id="price_2" name="price" type="radio")
									label(for="price_2") Item 1		
								.input-group
									input(id="price_3" name="price" type="radio")
									label(for="price_3") Item 2
		.popup-container.has-radius#popup-filter-location
			.bl-popup-heading
				span.fw-medium Chọn Tỉnh thành
				a.func-close-popup(href="#!")
